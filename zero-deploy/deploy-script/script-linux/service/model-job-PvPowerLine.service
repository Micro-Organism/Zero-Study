[Unit]
Description=model-job-PvPowerLine server
#Documentation=none
After=network.target

[Service]
Environment="SERVER_HOME={{.app.home}}/model-job-PvPowerLine"
ExecStart=/usr/local/bin/java -jar ${SERVER_HOME}/model-job-PvPowerLine.jar --spring.config.location=file:${SERVER_HOME}/application.yml
ExecStop=/bin/kill -9 $MAINPID
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
KillMode=control-group

[Install]
WantedBy=multi-user.target
Alias=model-job-PvPowerLine.service

