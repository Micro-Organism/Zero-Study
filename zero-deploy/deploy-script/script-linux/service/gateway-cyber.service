[Unit]
Description=gateway-cyber server
#Documentation=none
After=network.target

[Service]
Environment="SERVER_HOME={{.app.home}}/gateway-cyber"
ExecStart=/usr/local/bin/java -jar ${SERVER_HOME}/gateway-cyber.jar --spring.config.location=file:${SERVER_HOME}/application.yml
ExecStop=/bin/kill -9 $MAINPID
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
KillMode=control-group

[Install]
Alias=gateway-cyber.service
WantedBy=multi-user.target